<%= render :partial => "header", :object => {
  "title" => "User " + @user.name,
  "entity" => @user,
  "actions" =>[{
    "icon" => "arrow-left",
    "text" => "",
    "path" => users_path
  }, {
    "icon" => "pencil",
    "text" => "",
    "path" => edit_user_path(@user),
    "ctrlAction" => :edit
  }, {
    "icon" => "remove",
    "text" => "",
    "path" => @user,
    "ctrlAction" => :destroy,
    "method" => :delete,
    "confirm" => "Are you sure you want to delete this user?"
  }]
} %>

<ul class="properties col_6">
  <li>
    <p>
      <span class="property">Name</span>
      <span class="value"><%= @user.name %></span>
    </p>
  </li>
  <li>
    <p>
      <span class="property">Email</span>
      <span class="value"><%= @user.email %></span>
    </p>
  </li>
  <li>
    <p>
      <span class="property">Role</span>
      <span class="value"><%= @user.role.name %></span>
    </p>
  </li>
</ul>

<div class="col_6">
  <h4>Permissions</h4>
  <p>Can edit or create tasks for <%= pluralize(@system_groups.count, "System Group") %></p>
  <% @system_groups.each do |grp| %>
    <div><%= link_to(grp.name, grp) %> (<%= pluralize(grp.systems.count, 'System') %>)</div>
  <% end %>

  <p>Can edit or create tasks for <%= pluralize(@package_groups.count, "Package Group") %></p>
  <% @package_groups.each do |grp| %>
    <div><%= link_to(grp.name, grp) %> (<%= pluralize(grp.packages.count, 'System') %>)</div>
  <% end %>
</div>

<div class="floatFix"></div>
