<%= render :partial => "header", :object => {
  "title" => "Users",
  "actions" =>[{
    "icon" => "plus",
    "text" => "New User",
    "path" => new_user_path
  }]
} %>

<table class="striped tight sortable clickableRows">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.role.name %></td>
        <td>
          <ul class="button-bar">
            <li><%= link_to '<i class="fa fa-arrow-right"></i>'.html_safe, user %></li>
            <li><%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_user_path(user) %></li>
            <li><%= link_to '<i class="fa fa-remove"></i>'.html_safe, user, method: :delete, data: { confirm: 'Are you sure?' } %></li>
          </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
