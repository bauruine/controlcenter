<%= render :partial => "header", :object => {
  "title" => "Concrete Package Version",
  "actions" =>[{
    "icon" => "arrow-left",
    "text" => "",
    "path" => concrete_package_versions_path
  }, {
    "icon" => "pencil",
    "text" => "",
    "path" => edit_concrete_package_version_path(@concrete_package_version)
  }, {
    "icon" => "remove",
    "text" => "",
    "path" => @concrete_package_version,
    "method" => :delete,
    "confirm" => "Are you sure you want to delete this Concrete Package Version?"
  }]
} %>

<ul class="properties col_6">
  <li>
    <p>
      <span class="property">System</span>
      <span class="value"><%= link_to @concrete_package_version.system.name, @concrete_package_version.system %></span>
    </p>
  </li>
  <li>
    <p>
      <span class="property">Task</span>
      <span class="value"><%= @concrete_package_version.task ? (link_to @concrete_package_version.task.id, @concrete_package_version.task ) : "-" %></span>
    </p>
  </li>
  <li>
    <p>
      <span class="property">Concrete package state</span>
      <span class="value"><%= @concrete_package_version.concrete_package_state.name %></span>
    </p>
  </li>
  <li>
    <p>
      <span class="property">Package version</span>
      <span class="value"><%= @concrete_package_version.package_version.version %></span>
    </p>
  </li>
</ul>

<div class="floatFix"></div>
