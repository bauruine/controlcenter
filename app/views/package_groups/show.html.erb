<%= render :partial => "header", :object => {
  "title" => "Package Group " + @package_group.name,
  "entity" => @package_group,
  "actions" =>[{
    "icon" => "arrow-left",
    "text" => "",
    "path" => package_groups_path
  }, {
    "icon" => "pencil",
    "text" => "",
    "path" => edit_package_group_path(@package_group),
    "ctrlAction" => :edit
  }, {
    "icon" => "remove",
    "text" => "",
    "path" => @package_group,
    "ctrlAction" => :destroy,
    "method" => :delete,
    "confirm" => "Are you sure you want to delete this package group?"
  }]
} %>

<ul class="properties col_6">
  <li>
    <p>
      <span class="property">Name</span>
      <span class="value"><%= @package_group.name %></span>
    </p>
  </li>
  <li>
    <p>
      <span class="property">Permission level</span>
      <span class="value"><%= @package_group.permission_level %></span>
    </p>
  </li>
</ul>

<table class="striped tight clickableRows">
  <tr>
    <th>Name</th>
    <th>Section</th>
    <th>Homepage</th>
    <th>Summary</th>
  </tr>
  <% @group_assignments.each do |assignment| %>
    <tr>
      <td><%= assignment.package.name %></td>
      <td><%= assignment.package.section %></td>
      <td><a href="<%= assignment.package.homepage %>"><%= assignment.package.nice_url %></a></td>
      <td><%= assignment.package.summary %></td>
    </tr>
  <% end %>
</table>

<div class="floatFix"></div>
