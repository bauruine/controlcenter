<%= render :partial => "header", :object => {
  "title" => "Package Groups",
  "actions" =>[{
    "icon" => "plus",
    "text" => "New Package group",
    "path" => new_package_group_path
  }]
} %>

<table class="striped tight sortable clickableRows">
  <thead>
    <tr>
      <th>Name</th>
      <th>Permission level</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @package_groups.each do |package_group| %>
      <tr>
        <td><%= package_group.name %></td>
        <td><%= package_group.permission_level %></td>
        <td>
          <ul class="button-bar">
            <li><%= link_to '<i class="fa fa-arrow-right"></i>'.html_safe, package_group %></li>
            <li><%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_package_group_path(package_group) %></li>
            <li><%= link_to '<i class="fa fa-remove"></i>'.html_safe, package_group, method: :delete, data: { confirm: 'Are you sure?' } %></li>
          </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
