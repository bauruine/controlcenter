<p id="notice"><%= notice %></p>

<h1>Listing Packages</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Base version</th>
      <th>Architecture</th>
      <th>Section</th>
      <th>Repository</th>
      <th>Homepage</th>
      <th>Summary</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td><%= package.name %></td>
        <td><%= package.base_version %></td>
        <td><%= package.architecture %></td>
        <td><%= package.section %></td>
        <td><%= package.repository %></td>
        <td><a href="<%= package.homepage %>"><%= package.homepage %></a></td>
        <td><%= package.summary %></td>
        <td><%= link_to 'Show', package %></td>
        <td><%= link_to 'Edit', edit_package_path(package) %></td>
        <td><%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

