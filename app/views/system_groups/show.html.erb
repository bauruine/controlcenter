<%= render :partial => "header", :object => {
  "title" => "System Group",
  "actions" =>[{
    "icon" => "arrow-left",
    "text" => "",
    "path" => system_groups_path
  }, {
    "icon" => "pencil",
    "text" => "",
    "path" => edit_system_group_path(@system_group)
  }, {
    "icon" => "remove",
    "text" => "",
    "path" => @system_group,
    "method" => :delete,
    "confirm" => "Are you sure you want to delete this System Group?"
  }]
} %>

<ul class="properties col_6">
  <li>
    <p>
      <span class="property">Name</span>
      <span class="value"><%= @system_group.name %></span>
    </p>
  </li>
  <li>
    <p>
      <span class="property">Permission level</span>
      <span class="value"><%= @system_group.permission_level %></span>
    </p>
  </li>
</ul>

<% if @systems.length > 0 %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @paginated_systems.each do |system| %>
      <tr>
        <td><%= system.name %></td>
        <td><%= link_to system.id, system %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="digg_pagination">
  <div class="page_info">
    <%= page_entries_info @paginated_systems %>
  </div>
  <%= will_paginate @paginated_systems, :container => false %>
</div>

<% end %>

<div class="floatFix"></div>
