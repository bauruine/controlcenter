<p id="notice"><%= notice %></p>

<h1>Listing System Updates</h1>

<table>
  <thead>
    <tr>
      <th>System</th>
      <th>Package update</th>
      <th>System update state</th>
      <th>Task</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @system_updates.each do |system_update| %>
      <tr>
        <td><%= link_to system_update.system.name, system_update.system %></td>
        <td><%= link_to system_update.package_update.package.name, system_update.package_update.package %>
            <%= link_to system_update.package_update.candidate_version, system_update.package_update %></td>
        <td><%= system_update.system_update_state.name %></td>
        <td><%= system_update.task %></td>
        <td><%= link_to 'Show', system_update %></td>
        <td><%= link_to 'Edit', edit_system_update_path(system_update) %></td>
        <td><%= link_to 'Destroy', system_update, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

