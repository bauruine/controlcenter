<%= render :partial => "header", :object => {
  "title" => "Tasks",
  "entity" => @tasks.first,
  "actions" =>[{
    "icon" => "plus",
    "text" => "New Task",
    "path" => new_task_path,
    "ctrlAction" => :create
  }]
} %>


<%= form_for_filterrific @filterrific, html: { class:"col_12" } do |f| %>
  <div class="col_3">
    <label for="state_id_select">Task State</label>
    <%= f.select( :with_state_id, @filterrific.select_options[:with_state_id], { include_blank: '- Any -' }, id: 'state_id_select') %>
  </div>

  <div class="col_3">
    <label for="system_id_select">System</label>
    <%= f.select( :with_system_id, @filterrific.select_options[:with_system_id], { include_blank: '- Any -' }, id: 'system_id_select') %>
  </div>

  <%= link_to( 'Reset filters', reset_filterrific_url, class: "button" ) %>
<% end %>

<div id="filterrific_table" class="col_12">
  <%= render(
    partial: 'tasks/list',
    locals: { task: @task }
  ) %>
</div>

<div class="floatFix"></div>
